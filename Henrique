#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>

int main() {
    char senha[] = "1010";  
    char login[] = "usuario1"; 
    char senhadigitada[10];
    char logindigitado[10];
    
    printf("\n ##### Arcade Store #####\n\n");
        printf("          Login\n\n");
        printf("    Usuário:  ");
        scanf(" %s", logindigitado);
        printf("    Senha:    ");
        scanf(" %s", senhadigitada); 
        
    
    if (strcmp(senhadigitada, senha) != 0 || strcmp(logindigitado, login) != 0) {
          
    while (1) {
        system("clear");
        printf("\n ##### Arcade Store #####\n\n");
        printf("          Login\n\n");
        printf("\n Login ou senha incorretos.\n     Tente novamente.\n");
        printf("\n\n    Usuário:  ");
        scanf(" %s", logindigitado);
        printf("    Senha:    ");
        scanf(" %s", senhadigitada);
        

       
        if (strcmp(senhadigitada, senha) == 0 && strcmp(logindigitado, login) == 0) {
            printf("\n   Login bem-sucedido!\n");
            sleep(2);
            system("clear"); 
            break; 
        }
    }
    }
    system("clear");
    printf("\n ##### Bem vindo ! #####\n");
    printf("\n        Aguarde  \n\n");
    sleep(3);
    system("clear");
    printf("\n # Usuário1 #\n\n");
    printf(" ##### Menu #####\n\n");
    printf(" 1-Loja\n\n");
    printf(" 2-Biblioteca\n\n");
    printf(" 3-Conquistas\n\n");
    printf(" 4-Configurações\n\n\n\n");
    printf(" Digite o número para a função desejada: \n\n");
    
    return 0;
}








